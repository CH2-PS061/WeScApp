<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.plantdetail.PlantDetailActivity">

    <ImageView
        android:id="@+id/iv_detail_plant"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_camera_retro"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Status"
        android:textColor="@color/applegreen"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/iv_detail_plant"
        app:layout_constraintTop_toBottomOf="@+id/iv_detail_plant" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="Aman Untuk Dimakan"
        android:textSize="12sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/tv_plant_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Bunga Matahari"
        android:ellipsize="end"
        android:textColor="@color/applegreen"
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <View
        android:layout_width="210dp"
        android:layout_height="3dp"
        android:background="@color/applegreen"
        android:layout_marginStart="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_plant_detail"
        app:layout_constraintStart_toEndOf="@+id/tv_plant_detail"
        app:layout_constraintTop_toTopOf="@+id/tv_plant_detail" />

    <TextView
        android:id="@+id/tv_plant_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/roboto_medium"
        android:justificationMode="inter_word"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_plant_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_plant_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>